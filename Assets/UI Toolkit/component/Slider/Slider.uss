#Slider {
    justify-content: center;
    align-items: center;
    padding-left: 0;
    padding-right: 0;
    padding-top: 0;
    padding-bottom: 0;
    height: 40px;
}

#Slider > #BarContainer {
    height: 26px;
    width: 100%;
    padding-right: 10px;
    padding-left: 10px;
    padding-top: 10px;
    padding-bottom: 10px;
}

#Slider > #BarContainer > #Bar {
    height: 100%;
    border-radius: 3px;
    width: 100%;
    overflow: hidden;
}

#Slider > #BarContainer > #Bar > #UnChecked {
    position: absolute;
    left: 0;
    top: 0;
    background-color: var(--sliderBar-default-color);
    width: 100%;
    height: 100%;
}

#Slider > #BarContainer > #Bar > #Checked {
    position: absolute;
    left: 0;
    top: 0;
    background-color: var(--slider-default-color);
    width: 0;
    height: 100%;
}

#Slider > #BarContainer > #Point {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background-color: var(--slider-default-color);
    position: absolute;
    top: 3px;
    left: 0;
    margin-left: 0;
}

#Slider > #BarContainer > #Point > #Tips {
    position: absolute;
    left: -15px;
    top: -100%;
    margin: 0;
    padding: 0;
    width: 50px;
    justify-content: center;
    align-items: center;
    -unity-text-align: upper-center;
    color: var(--slider-default-color);
}
